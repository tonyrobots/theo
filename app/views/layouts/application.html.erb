<!DOCTYPE html>
<html>
<head>
  <title>Theo</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
    <div id="header">
      <%= link_to(image_tag("logo.png", :border =>0), root_path) %>
    </div>
    <nav class="round">
      <%= render("shared/topnav") %>
	</nav>
	<div id="flash">
	  <p id="notice"><%= notice %></p>
	  <p id="alert"><%= alert %></p>
	</div>
	<div id="body">
		<%= yield %>
	</div>
</div>
</body>
</html>
